    "user_inputs_reference": {
      "description": "ORANGE ARROWS - These are NOT in database, user must provide them",
      "vehicle_characteristics": [
        "purchase_cost - Vehicle purchase price (EUR)",
        "type_energy - Energy type (diesel, electric, hybrid, etc.)",
        "size_vehicle - Vehicle class (N1, N2, N3)",
        "registration_country - Country of registration",
        "RV - Residual value at end of life (EUR)"
      ],
      "operational_parameters": [
        "annual_distance_travel - Annual distance in km",
        "departure_city - Starting city",
        "arrival_city - Destination city",
        "N_years - Number of years of operation",
        "team_count - Number of drivers (1 for trucks)",
        "maintenance_cost - Annual maintenance cost (EUR)"
      ]
    },
    "digital_twin_outputs_reference": {
      "description": "ORANGE ARROWS - These come from Digital Twin Simulation",
      "parameters": [
        "consumption_energy - Actual energy consumed (kWh or liters)",
        "fuel_multiplier - Efficiency multiplier from simulation",
        "EF_CO2_diesel - CO2 emissions factor (kg/km)"
      ]
    },
    "calculation_notes": {
      "color_coding": {
        "YELLOW": "Database parameters - retrieved automatically",
        "ORANGE": "User inputs + Digital Twin outputs - must be provided",
        "GREEN": "System outputs - calculated results"
      },
      "formulas": {
        "o_taxes": "consumption_energy × price_energy_km × tax_energy(c,e) × fuel_multiplier × EF_CO2 × tax_CO2 × regional_coefficient + tax_reg + tax_annual + B_env",
        "o_tolls": "price_per_km(c,k,e) × annual_distance_travel",
        "o_insurance": "insurance_rate(c,L,e,safety) × (purchase_cost - RV)",
        "o_crew": "wage_of_crew_rank × N_years × team_count",
        "o_energy": "consumption_energy × energy_price(c,e)",
        "total_opex": "o_taxes + o_tolls + o_insurance + o_crew + o_energy + maintenance_cost"
      },
      "units": {
        "price_energy_km": "EUR/km",
        "tax_energy_c_e": "multiplier by country and energy",
        "tax_reg_c_k_L": "EUR/year by country, class, size",
        "tax_annual_c_k_L": "EUR/year by country, class, size",
        "tax_CO2_c_e": "EUR/kg CO2",
        "B_env_c_k_e": "EUR (bonus/malus)",
        "price_per_km": "EUR/km",
        "insurance_rate_c_L_e_safety": "fraction",
        "wage_of_crew_rank": "EUR/year",
        "energy_price_c_e": "EUR/liter or EUR/kWh or EUR/kg"
      }
    }
